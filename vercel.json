{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "style.css",
      "use": "@vercel/static"
    },
    {
      "src": "script.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/rooms/status", "dest": "api/main.py" },
    { "src": "/book", "dest": "api/main.py" },
    { "src": "/random", "dest": "api/main.py" },
    { "src": "/reset", "dest": "api/main.py" },
    { "src": "/vacate", "dest": "api/main.py" },
    { "src": "/bookings", "dest": "api/main.py" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
